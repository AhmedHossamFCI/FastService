@model  FastService.prod.ViewModels.LoginVm

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- page-header-start -->
<div class="page-header">
    <div class="container">
        <div class="row center">
            <div class="col-lg-5 col-md-5 col-sm-12 col-xs-12">
                <div class="page-section">
                    <h1 class="page-title arb">أضف بياناتك</h1>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- page-header-close -->
<div class="space-medium">
    <div class="container">
        <div class="row center">
            <h1 class="arb">تسجيل الدخول</h1>
            <p class="mb40 arb">ادخل اسم الدخول و الرقم السري</p>
            <div class="col-lg-3 col-md-3 col-sm-3"></div>
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                <div class="mb30" dir="rtl">
                    <div class="contact-form">
                        <div class="row arb">
                            @using (Html.BeginForm("Autherize","Login",FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Username, new { @class = "control-label sr-only" })
                                        @Html.EditorFor(m => m.Username, new { htmlAttributes = new { @class = "form-control", placeholder = "اسم الدخول", required = "required" } })
                                    </div>
                                </div>
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Password, new { @class = "control-label sr-only" })
                                        @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control", placeholder = "الرقم السري", required = "required" } })
                                    </div>
                                </div>
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <button class="btn btn-primary arb">تسجيل الدخول</button>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

